<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context="com.isep.android.weatherapp.WeatherInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="COORDINATES"
        android:background="#f3217c"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lat_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="van las coordenadas"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lng_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="van las coordenadas"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="16sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="TEMPERATURE"
        android:background="#f3217c"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/temperature_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="va la temperatura"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="16sp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="WIND"
        android:background="#f3217c"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/wind_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="va el viento"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="16sp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="HUMIDITY"
        android:background="#f3217c"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/humidity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="va la humedad"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="16sp"
        android:layout_weight="1"/>

</LinearLayout>
